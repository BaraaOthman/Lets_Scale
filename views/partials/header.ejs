    <script>

document.addEventListener("DOMContentLoaded", function() {
    var profilePic = getCookie("profilepic");
    if (profilePic) {
        document.getElementById("profilepic").src = "/Profiles_Pic/" + profilePic;
    }else{
        document.getElementById("profilepic").src = "/Profiles_Pic/" + 'user.jpeg';

    }
});

function getCookie(name) {
    var cookieArr = document.cookie.split("; ");
    for (var i = 0; i < cookieArr.length; i++) {
        var cookiePair = cookieArr[i].split("=");
        if (name == cookiePair[0]) {
            return cookiePair[1];
        }
    }
    return null;
}

